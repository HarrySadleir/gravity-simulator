{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "preserve",
      "esModuleInterop": true,
      "sourceMap": true,
      "allowJs": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "outDir": "./dist",
      "moduleResolution": "node",
      "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["build", "./dist", "node_modules"]
}