{
    "name": "p5js-with-typescript",
    "version": "1.0.0",
    "description": "A template for a p5.js sketch using Typescript",
    "main": "./src/server/index.js",
    "type": "module",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npx tsc; npm run copy-files",
        "start": "node dist/server/index.js",
        "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
        "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/"
    },
    "dependencies": {
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "p5": "^0.9.0",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^18.6.4",
        "@types/p5": "^1.4.2",
        "concurrently": "^7.3.0",
        "copyfiles": "^2.4.1",
        "nodemon": "^2.0.19",
        "parcel": "^2.7.0",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "typescript": "^4.7.4"
    },
    "keywords": [
        "p5js",
        "typescript"
    ]
}
